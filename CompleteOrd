    private void compButtonListener(java.awt.event.ActionEvent evt) {                                    
        // TODO add your handling code here:
        if (evt.getSource()==cancelB){
            this.setVisible(false);
            Main com = new Main();
            com.getFrame().setVisible(true);
        }
        else if (evt.getSource()==editB){
            this.setVisible(false);
             MainMenu com = new MainMenu();
            com.getFrame().setVisible(true);
        }
        else if (evt.getSource()==payB){
            this.setVisible(false);
             Main com = new Main();
            com.getFrame().setVisible(true);
            Mcombo ordLst = new Mcombo();
            System.out.println(ordLst.getOrdList());
                       
        }
    }                                   


