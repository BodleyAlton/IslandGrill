    private void startActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
        if (evt.getSource() == start){
            MainMenu com = new MainMenu();
            com.getFrame().setVisible(true);
            this.setVisible(false);            
        }
        
    }                                     

    
