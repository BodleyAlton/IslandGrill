     public JFrame getFrame(){
       JFrame co = new JFrame();
       Main c = new Main();
       JPanel pan = new JPanel();
       pan.add(c);
       co.add(pan);
       co.pack();
       return co;
    }
    
    public String alterdatabase() {
        Connection myConn = null;
        Statement myStmt = null;
        ResultSet myRs = null;

        String user = "root";
        String pass = "P@ssw0rd0011";

        try {
            // 1. Get a connection to database
            myConn = DriverManager.getConnection("jdbc:mysql://localhost:3306/islandgrill", user, pass);

            // 2. Create a statement
            myStmt = myConn.createStatement();

            // 3. Execute SQL query
            myRs = myStmt.executeQuery("select sidesprice from sides where idsides = 3001");
                while (myRs.next()) {
                   String x = (myRs.getString("sidesprice"));
                System.out.println(x);
                return x;
            }
            } 
        catch (Exception exc) {
            exc.printStackTrace();
        }
 return "nothing";
  }
