    private void ButtonListener(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_ButtonListener
        // TODO add your handling code here:
        if (evt.getSource()== combob){
            c.setVisible(false);
            new Mcombo().setVisible(true);}
        else if (evt.getSource()== sideb){
            c.setVisible(false);
            new Sides().setVisible(true);}
        else if (evt.getSource()== drinkb){
            c.setVisible(false);
            new Drink().setVisible(true);}
        else if (evt.getSource()== customb){
            c.setVisible(false);
            new Custom().setVisible(true);}
          
        
        
    }//GEN-LAST:event_ButtonListener


