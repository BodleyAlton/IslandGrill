    private void ButtonListener(java.awt.event.ActionEvent evt) {                                
        // TODO add your handling code here:
        if (evt.getSource()== combob){
            this.setVisible(false);
            Mcombo com = new Mcombo();
            com.getFrame().setVisible(true);}
        
        else if (evt.getSource()== sideb){
            this.setVisible(false);
            Sides com = new Sides();
            com.getFrame().setVisible(true);}
        
        else if (evt.getSource()== drinkb){
            this.setVisible(false);
            Drink com = new Drink();
            com.getFrame().setVisible(true);}
        
        else if (evt.getSource()== customb){
            this.setVisible(false);
            Custom com = new Custom();
            com.getFrame().setVisible(true);}
        
        else if (evt.getSource()== complete){
            this.setVisible(false);
            CompleteOrd com = new CompleteOrd();
            com.getFrame().setVisible(true);
        }
        
        else if (evt.getSource()== cancel){
            this.setVisible(false);
            Main com = new Main();
            com.getFrame().setVisible(true);
        }
    }                               


