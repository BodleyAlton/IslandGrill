    private void comboListener(java.awt.event.ActionEvent evt) {                               
        // TODO add your handling code here:
        if(evt.getSource() == combo1){
           this.setVisible(false);
           MainMenu com = new MainMenu();
            com.getFrame().setVisible(true);
            //c.setVisible(true);
            ordLst.add(combo1);}
        else if(evt.getSource() == combo2){
           this.setVisible(false);
            MainMenu com = new MainMenu();
            com.getFrame().setVisible(true);
            ordLst.add(combo2);}
        if(evt.getSource() == combo3){
           this.setVisible(false);
            MainMenu com = new MainMenu();
            com.getFrame().setVisible(true);
            ordLst.add(combo3);}
        if(evt.getSource() == combo4){
           this.setVisible(false);
            MainMenu com = new MainMenu();
            com.getFrame().setVisible(true);
            ordLst.add(combo4);}
        if(evt.getSource() == combo5){
           this.setVisible(false);
            MainMenu com = new MainMenu();
            com.getFrame().setVisible(true);
            ordLst.add(combo5);}
        if(evt.getSource() == combo6){
           this.setVisible(false);
            MainMenu com = new MainMenu();
            com.getFrame().setVisible(true);
            ordLst.add(combo6);}
        
    }                              

